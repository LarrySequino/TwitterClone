<div class="page-header">
    <h1> All Tweeters <small> start following </small></h1>
</div>

<ul>
    <% @users.each do |user| %>
        <li><%= link_to  user.username, user_path(user)%>
        <% if user.id != current_user.id %>
            <% if current_user.followed_users.include?(user) %>
                (<%= link_to "unfollow", "/users/unfollow/#{user.id}" %>)
            <% else %>
                (<%= link_to "follow", "/users/follow/#{user.id}" %>)
            <% end %>
        <% end %>
        </li>
    <% end %>
</ul>